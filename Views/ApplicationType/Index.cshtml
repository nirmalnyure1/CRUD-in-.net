

@model IEnumerable<Ecommerce.Models.ApplicationType>


<div class="container" p-3>
    <div>
        <div>
            <h1>
                ApplicationType List
            </h1>
        </div>
        <div>
            <a  asp-action="Create">
                Create new Application
            </a>

        </div>

    </div>

    <br />
    <br />

    @if (Model.Count() > 0)
    {
        <table class=" table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>

                    <th>
                        ApplicationType Name
                    </th>
                  
                      
                </tr>

            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        <div>
                            <a asp-controller="ApplicationType" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary">Edit</a>
                        </div>

                        <div>
                            <a asp-controller="ApplicationType" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger">Delete</a>
                        </div>
                    </td>

                </tr>


                }


            </tbody>

        </table>
    }
    else
    {
        <p>NO Application exists</p>
    }
</div>




