
@model IEnumerable<Ecommerce.Models.Category>


    <div class="container" p-3>
        <div >
            <div>
                <h1>
                    Category List
                </h1>
            </div>
            <div>
                <a asp-controller="Category" asp-action="Create">
                    Create new Category
                </a>
               
            </div>

        </div>

        <br />
        <br />

        @if (Model.Count() > 0) { 
    <table class=" table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>

                <th>
                    Category Name
                </th>
                <th>
                    Dispaly name
                </th>
                <td>    </td>
            </tr>

        </thead>
        <tbody>
            @foreach(var obj in Model)
                {
                    <tr>
                        <td>
                            @obj.Name
                        </td>
                        <td>
                            @obj.DisplayOrder
                        </td>
                        <td>
                            <div>
                                <a asp-controller="Category"  asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary">Edit</a>
                            </div>

                            <div>
                                <a asp-controller="Category" asp-route-Id="@obj.Id"  asp-action="Delete" class="btn btn-danger">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
           

        </tbody>
        
    </table>
        }
            else
            {
                <p>NO category exists</p>
            }
    </div>
  

